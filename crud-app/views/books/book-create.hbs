<div class="row justify-content-center">
    <div class="col-md-6">

        <h1>Crear un libro</h1>

        <form action="/libros/crear" method="POST">
            <div class="form-group">
                <label for="field1">Título</label>
                <input name="title" type="text" class="form-control" id="field1">
                <small class="form-text text-muted">Introduce el nombre completo</small>
            </div>
            <div class="form-group">
                <label for="field2">Autor</label>
                <input name="author" type="text" class="form-control" id="field2">
            </div>
            <div class="form-group">
                <label for="field3">Descripción</label>
                <input name="description" type="text" class="form-control" id="field3">
            </div>
            <div class="form-group">
                <label for="field4">Puntuación</label>
                <input name="rating" type="text" class="form-control" id="field4">
            </div>

            <button type="submit" class="btn btn-dark">Crear libro</button>
        </form>
    </div>
</div>